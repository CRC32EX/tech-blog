<div class="row">
  <main class="col-xs-12 col-sm-12 col-md-10 blog-posts">
  <% if (pagination == 2){ %>
    <% page.posts.each(function(post){ %>
      <%- partial('article', {post: post, index: true}) %>
    <% }) %>
  <% } else { %>
    <section class="archives-wrap">
      <div class="archives">
        <% page.posts.each(function(post, i){ %>
        <%- partial('archive-post', {post: post, even: i % 2 == 0, index: true}) %>
        <% }) %>
      </div>
      <% if (page.posts.length){ %>
      <div id="page-nav" class="pagination">
        <%- paginator({prev_text: 'Prev', next_text: 'Next', end_size: '2'}) %>
      </div>
      <% } %>
    </section>
  <% } %>

    <aside>
      <section>
        <h2 class="bottom-content-header">人気記事</h2>
        <div class="margin-bottom-20 nav tabs">
          <input id="weekly" type="radio" name="tab_item" checked>
          <label tabindex="0" class="tab_item" for="weekly">週間</label>
          <input id="monthly" type="radio" name="tab_item">
          <label tabindex="0" class="tab_item" for="monthly">月間</label>
          <input id="yearly" type="radio" name="tab_item">
          <label tabindex="0" class="tab_item" for="yearly">年間</label>
          <div class="tab_content" id="popular_weekly">
            <div class="widget-wrap">
              <%- popular_posts('weekly') %>
            </div>
          </div>
          <div class="tab_content" id="popular_monthly">
            <div class="widget-wrap">
              <%- popular_posts('monthly') %>
            </div>
          </div>
          <div class="tab_content" id="popular_yearly">
            <div class="widget-wrap">
              <%- popular_posts('yearly') %>
            </div>
          </div>
        </div>
        <div class="margin-bottom-20 nav recommend">
          <h2 class="bottom-content-header">注目の記事</h2>
          <%- partial('../_partial/featured-post.ejs', {limit:5}) %>
        </div>
        <div class="blog-tags margin-bottom-20">
          <h2 class="bottom-content-header">タグから記事を探す</h2>
          <%- partial('../_widget/tag.ejs') %>
        </div>
      </section>
    </aside>
  </main>
  <aside class="col-xs-12 col-sm-12 col-md-2 blog-sidebar">
    <%- partial('sidebar') %>
  </aside>
</div>
