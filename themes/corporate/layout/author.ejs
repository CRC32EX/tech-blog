<div class="container">
  <ul class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/authors">Authors</a></li>
    <li class="active"><%- page.author %></li>
  </ul>
  <section id="main">
    <h1><%- page.author %>が執筆した記事一覧 <%= count_author(page.author) %>件　♡<%= page.authorSNSCnt %></h1>
    <div id="chart" style="width:100%;min-height:250px"></div>
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.1.2/dist/echarts.min.js"></script>
    <script type="text/javascript">
      let myChart = echarts.init(document.getElementById('chart'));
      let option = {
        title: {
            text: '月別投稿数'
        },
        tooltip: {
            trigger: 'axis'
        },
        grid: {},
        toolbox: {},
        xAxis: {
            type: 'category',
            boundaryGap: false,
            // data: ['2021/01', '2021/02', '2021/03', '2021/04', '2021/05', '2021/06', '2021/07']
            data: [<%= generate_post_month(page.author) %>]
        },
        yAxis: {
            type: 'value',
            min:0,
            max:<%= max_post_month(page.author) %>

        },
        series: [
            {
                name: '投稿数',
                type: 'line',
                // data: [2, 2, 1, 3, 2, 1, 0]
                data: [<%= generate_post_series(page.author) %>]
            }
        ]
      };
      myChart.setOption(option);
    </script>
    <%- partial('_partial/archive', {pagination: config.author, index: true}) %>
  </section>
</div>
