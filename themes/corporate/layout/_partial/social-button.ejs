<!-- シェアボタン START -->
  <ul class="social-button">
    <%
       let link = full_url_for(path).replace("index.html", "");
       let title = "";
       if (typeof post != 'undefined') {
           link = post.permalink;
           title = post.title;
       }
       const posts = site.posts;
    %>
    <!-- Twitter -->
    <li>
      <a class="twitter-btn" href="https://twitter.com/share?url=<%- link %>&via=future_techblog&related=twitterapi%2Ctwitter&text=<%- encodeURI(title) %>" rel="nofollow">
        <i></i><span class="tw-btn-label"><%= get_tw_count(link) %></span>
      </a>
    </li>
    <!-- Facebook -->
    <li>
      <a class="fb-btn" href="http://www.facebook.com/share.php?u=<%- link %>&t=<%- encodeURI(title) %>" rel="nofollow">
        <i></i><span class="fb-btn-label"><%= get_fb_count(link) %></span>
      </a>
    </li>
    <!-- hatebu -->
    <li>
      <a class="hatebu-btn" href="https://b.hatena.ne.jp/entry/s/<%- encodeURI(link).replace('https://', '') %>" rel="nofollow">
        <i></i><span class="hatebu-btn-label"><%= get_hatebu_count(link) %></span>
      </a>
    </li>
    <!-- pocket -->
    <li>
      <a class="pocket-btn" href="https://getpocket.com/save?url=<%- encodeURI(link) %>" rel="nofollow">
        <i></i><span class="pocket-btn-label"><%= get_pocket_count(link) %></span>
      </a>
    </li>
  </ul>
<!-- シェアボタン END -->
